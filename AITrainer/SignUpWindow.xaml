<Page x:Class="WPFAPP.SignUpWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SignIn"
      Height="900" Width="400"
      Background="#F8E4CC">

    <Page.Resources>
        <!-- Rounded button style (use ControlTemplate to get CornerRadius) -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#11647A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.95"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Input border style for the rounded input containers -->
        <Style x:Key="InputBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="BorderBrush" Value="#EDEFF2"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Margin" Value="24,10"/>
            <Setter Property="Padding" Value="16,0"/>
        </Style>

        <!-- watermark base style -->
        <Style x:Key="WatermarkDefaults" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#BDBFC6"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- outer frame with subtle stroke like the design -->
        <Border Margin="8"
                CornerRadius="12"
                BorderBrush="#9AA6B0"
                BorderThickness="4"
                Background="#F8E4CC">
            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel HorizontalAlignment="Center"
                                Margin="0,24,0,48"
                                Width="380">

                        <Rectangle Height="40" Fill="Transparent"/>

                        <!-- Title -->
                        <TextBlock Text="PENGU"
                                   FontSize="48"
                                   FontWeight="Bold"
                                   Foreground="#18184B"
                                   HorizontalAlignment="Center"
                                   Margin="0,40,0,4"/>
                        <TextBlock Text="Self Practice Deeply"
                                   FontSize="22"
                                   Foreground="#11647A"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,28"/>

                        <!-- White card -->
                        <Border Background="White"
                                CornerRadius="24"
                                Padding="20"
                                Width="360">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000"
                                                  Opacity="0.12"
                                                  BlurRadius="12"
                                                  ShadowDepth="6"/>
                            </Border.Effect>

                            <StackPanel>
                                <TextBlock FontSize="28"
                                           FontWeight="Bold"
                                           Foreground="#18184B"
                                           Margin="8,4,0,16">
                                    <Run Text="Sign-"/>
                                    <Run Language="vi-vn" Text="up"/>
                                </TextBlock>

                                <!-- Email -->
                                <Border Style="{StaticResource InputBorderStyle}">
                                    <Grid>
                                        <TextBox x:Name="txtEmail"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 FontSize="18"
                                                 VerticalContentAlignment="Center"/>
                                        <TextBlock Text="Email"
                                                   Margin="6,0,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock"
                                                       BasedOn="{StaticResource WatermarkDefaults}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, ElementName=txtEmail}"
                                                                     Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>

                                <!-- Username (SỬA LẠI ĐOẠN NÀY) -->
                                <Border Style="{StaticResource InputBorderStyle}">
                                    <Grid>
                                        <TextBox x:Name="txtUser"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 FontSize="18"
                                                 VerticalContentAlignment="Center"/>
                                        <TextBlock Text="Username"
                                                   Margin="6,0,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock"
                                                       BasedOn="{StaticResource WatermarkDefaults}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, ElementName=txtUser}"
                                                                     Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>

                                <!-- Password -->
                                <Border Style="{StaticResource InputBorderStyle}">
                                    <Grid>
                                        <PasswordBox x:Name="txtPassword"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     FontSize="18"
                                                     VerticalContentAlignment="Center"
                                                     Padding="16,0"/>
                                        <TextBlock Text="Password"
                                                   Margin="6,0,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock"
                                                       BasedOn="{StaticResource WatermarkDefaults}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Password, ElementName=txtPassword}"
                                                                     Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>

                                <!-- Confirm Password -->
                                <Border Style="{StaticResource InputBorderStyle}">
                                    <Grid>
                                        <PasswordBox x:Name="txtConfirm"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     FontSize="18"
                                                     VerticalContentAlignment="Center"
                                                     Padding="16,0"/>
                                        <TextBlock Text="Confirm Password"
                                                   Margin="6,0,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock"
                                                       BasedOn="{StaticResource WatermarkDefaults}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Password, ElementName=txtConfirm}"
                                                                     Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>

                                <!-- Sign-up button -->
                                <Border Height="88"
                                        Background="Transparent"
                                        Margin="16,18,16,0">
                                    <Button x:Name="btnSignUp"
                                            Style="{StaticResource RoundedButtonStyle}"
                                            Content="Sign-up"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center"
                                            Height="64"
                                            Click="btnSignUp_ClickAsync"/>
                                </Border>

                            </StackPanel>
                        </Border>

                        <Rectangle Height="18" Fill="Transparent"/>

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>

<Page x:Class="WPFAPP.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource BgDarkBrush}"
      Width="400" Height="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="37.787"/>
            <RowDefinition Height="32.213"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="0,6,0,24">
            <StackPanel>

                <!-- Header -->
                <TextBlock Text="My Profile"
                           Foreground="White"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0 20 0 24"/>

                <!-- Avatar Section -->
                <Border Background="#182447"
                        CornerRadius="20"
                        Padding="20"
                        Margin="0 0 0 16" Width="330">
                    <StackPanel>
                        <!-- Avatar -->
                        <Border Width="120" Height="120"
                                CornerRadius="60"
                                Background="White"
                                HorizontalAlignment="Center"
                                Margin="0 0 0 16">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" 
                                                  Opacity="0.2" 
                                                  BlurRadius="20" 
                                                  ShadowDepth="0"/>
                            </Border.Effect>

                            <!-- Avatar Image or Placeholder -->
                            <Grid>
                                <Ellipse x:Name="AvatarImageBorder"
                                         Width="120" Height="120">
                                    <Ellipse.Fill>
                                        <ImageBrush x:Name="AvatarImage"
                                                    Stretch="UniformToFill"/>
                                    </Ellipse.Fill>
                                </Ellipse>

                                <!-- Default Icon if no avatar -->
                                <TextBlock x:Name="DefaultAvatarIcon"
                                           FontFamily="Segoe MDL2 Assets"
                                           Text="&#xE13D;"
                                           FontSize="60"
                                           Foreground="#6B7280"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Change Avatar Button -->
                        <Button Content="Change Avatar"
                                Background="#0C5673"
                                Foreground="White"
                                FontSize="13"
                                Height="36"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="ChangeAvatar_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#0C5673"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="8"
                                                        Padding="16 8">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#005A8A"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Profile Information Card -->
                <Border Style="{StaticResource CardStyle}"
                        Background="#182447" Width="338">
                    <StackPanel>
                        <TextBlock Text="Personal Information"
                                   Foreground="White"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Margin="0 0 0 16"/>

                        <!-- Full Name -->
                        <TextBlock Text="Full Name"
                                   Foreground="#94A3B8"
                                   FontSize="12"
                                   Margin="0 0 0 6"/>
                        <Border Background="White"
                                CornerRadius="10"
                                Padding="12"
                                Margin="0 0 0 12">
                            <TextBox x:Name="FullNameTextBox"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     FontSize="14"
                                     Foreground="Black"
                                     Text=""/>
                        </Border>

                        <!-- Date of Birth -->
                        <TextBlock Text="Date of Birth"
                                   Foreground="#94A3B8"
                                   FontSize="12"
                                   Margin="0 0 0 6"/>
                        <Border Background="White"
                                CornerRadius="10"
                                Padding="12"
                                Margin="0 0 0 12">
                            <DatePicker x:Name="DobDatePicker"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        FontSize="14"
                                        Foreground="Black"/>
                        </Border>

                        <!-- Address -->
                        <TextBlock Text="Address"
                                   Foreground="#94A3B8"
                                   FontSize="12"
                                   Margin="0 0 0 6"/>
                        <Border Background="White"
                                CornerRadius="10"
                                Padding="12"
                                Margin="0 0 0 12">
                            <TextBox x:Name="AddressTextBox"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     FontSize="14"
                                     Foreground="Black"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="60"
                                     Text=""/>
                        </Border>

                        <!-- User ID (Read-only) -->


                        <!-- Save Button -->
                        <Button Content="Save Changes"
                                Background="#10B981"
                                Foreground="White"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Height="50"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="SaveProfile_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#10B981"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="10"
                                                        Padding="16">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#059669"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#047857"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                    </StackPanel>
                </Border>

                <!-- Logout Button -->
                <Button Content="Logout"
                        Background="#EF4444"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Height="50"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0 16 0 20"
                        Click="Logout_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#EF4444"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="10"
                                                Padding="16">
                                            <StackPanel Orientation="Horizontal"
                                                        HorizontalAlignment="Center">
                                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                                           Text="&#xE7E8;"
                                                           FontSize="18"
                                                           Margin="0 0 8 0"
                                                           VerticalAlignment="Center"/>
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#DC2626"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#B91C1C"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Navigation -->
        <Border Grid.Row="1"
        Background="#1E1560"
        Height="70"
                Width="350"
        CornerRadius="0" Grid.RowSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="113*"/>
                    <ColumnDefinition Width="99*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="113*"/>
                </Grid.ColumnDefinitions>

                <!-- Home -->
                <Button Grid.Column="0"
                Background="Transparent"
                BorderThickness="0"
                Cursor="Hand"
                 Grid.ColumnSpan="2" Margin="0,0,99,0" Click="Button_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <StackPanel Background="Transparent">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                   Text="&#xE10F;"
                                   FontSize="24"
                                   Foreground="#94A3B8"
                                   HorizontalAlignment="Center"
                                   Margin="0 10 0 4"/>
                                <TextBlock Text="Home"
                                   FontSize="12"
                                   Foreground="#94A3B8"
                                   HorizontalAlignment="Center"
                                   Margin="0 0 0 10"/>
                            </StackPanel>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Profile -->
                <Button Grid.Column="1"
                Background="Transparent"
                BorderThickness="0"
                Cursor="Hand"
                Grid.ColumnSpan="3">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <StackPanel Background="Transparent">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                   Text="&#xE13D;"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   Margin="0 10 0 4"/>
                                <TextBlock Text="Profile"
                                   FontSize="12"
                                   Foreground="#94A3B8"
                                   HorizontalAlignment="Center"
                                   Margin="0 0 0 10"/>
                            </StackPanel>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Setting (Active) -->
                <Button Grid.Column="3"
                Background="Transparent"
                BorderThickness="0"
                Cursor="Hand" Grid.ColumnSpan="2" Margin="10,0,-14,0" Click="Button_Click_1">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <StackPanel Background="Transparent">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                   Text="&#xE115;"
                                   FontSize="24"
                                   Foreground="#EF4444"
                                   HorizontalAlignment="Center"
                                   Margin="0 10 0 4"/>
                                <TextBlock Text="Setting"
                                   FontSize="12"
                                   Foreground="#EF4444"
                                   HorizontalAlignment="Center"
                                   Margin="0 0 0 10"/>
                            </StackPanel>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </Grid>
        </Border>

    </Grid>
</Page>
<Page x:Class="WPFAPP.WritingWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource BgDarkBrush}"
      Width="370" Height="760">

    <Grid Margin="16">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button
            Margin="23,17,0,143"
            HorizontalAlignment="Left"
            Foreground="White"
            FontSize="13"
            Background="Transparent"
            BorderThickness="0"
            Cursor="Hand"
            Click="Previous_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <TextBlock Text="← Previous"
                               Foreground="{TemplateBinding Foreground}" 
                               TextDecorations="None" />
                </ControlTemplate>
            </Button.Template>
        </Button>

        <StackPanel Grid.Row="0" Margin="0,46,0,20" Grid.RowSpan="2">

            <Border Style="{StaticResource CardStyle}" Height="517">
                <StackPanel>

                    <!-- Title -->
                    <TextBlock Text="Writing With AI"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0 0 0 14"/>

                    <!-- Topic card -->
                    <Border Background="White"
                            CornerRadius="16"
                            Padding="12"
                            Margin="0 0 0 16" 
                            Height="124">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Writing Topic"
                                       FontSize="20"
                                       FontWeight="SemiBold" 
                                       Margin="10,10,-10,59" 
                                       Grid.ColumnSpan="2"/>

                            <TextBox x:Name="TopicTextBox"
                                     FontSize="11"
                                     Foreground="Gray"
                                     TextWrapping="Wrap" 
                                     BorderThickness="0"
                                     Background="Transparent"
                                     IsReadOnly="True"
                                     Margin="10,51,-10,10" 
                                     Grid.ColumnSpan="2"
                                     Text="Click 'Generate' to get an AI-generated writing topic"/>

                            <Button x:Name="GenerateButton"
                                    Content="✏ Generate"
                                    FontSize="11"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Background="#051033"
                                    Margin="179,0,0,66" 
                                    Click="GenerateTopic_Click" Height="34" VerticalAlignment="Bottom"/>
                        </Grid>
                    </Border>

                    <!-- Essay editor -->
                    <Border Background="Beige"
                            CornerRadius="16"
                            Padding="12" 
                            Height="297">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="Your Essay"
                                       FontWeight="SemiBold"
                                       DockPanel.Dock="Left"/>

                            <TextBlock x:Name="WordCountTextBlock"
                                       Text="Words: 0"
                                       FontSize="11"
                                       Foreground="Gray"
                                       DockPanel.Dock="Right" 
                                       Margin="225,10,-225,-10" 
                                       Grid.RowSpan="2"/>

                            <Border Background="White"
                                    CornerRadius="16"
                                    Padding="12" 
                                    Margin="0,29,0,0">
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <TextBox x:Name="EssayTextBox"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             BorderThickness="0"
                                             FontSize="14"
                                             Background="Transparent"
                                             Foreground="Black" 
                                             Height="230" 
                                             Width="240"
                                             TextChanged="EssayTextBox_TextChanged"/>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </Border>

                </StackPanel>
            </Border>

            <!-- Submit -->
            <Button x:Name="SubmitButton"
                    Content="SUBMIT"
                    Style="{StaticResource SubmitButtonStyle}"
                    Margin="0 16 0 0"
                    Height="50"
                    Click="Submit_Click"
                    IsEnabled="False"/>
        </StackPanel>

        <!-- Bottom Navigation -->
        <!-- Bottom nav -->
        <Grid Grid.Row="2" Background="#12103D" Height="64" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Home -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="20" Foreground="#F20231" HorizontalAlignment="Center"/>
                <TextBlock Text="Home" FontSize="12" Foreground="#F20231" Margin="0,6,0,0" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Profile -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="18" Foreground="#EFBF7F" HorizontalAlignment="Center" Opacity="0.85"/>
                <TextBlock Text="Profile" FontSize="12" Foreground="#EFBF7F" Margin="0,6,0,0" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Setting -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="20" Foreground="#EFBF7F" HorizontalAlignment="Center"/>
                <TextBlock Text="Setting" FontSize="12" Foreground="#EFBF7F" Margin="0,6,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

    </Grid>
</Page>
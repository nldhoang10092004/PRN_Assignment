<Page x:Class="WPFAPP.SpeakingWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource BgDarkBrush}"
      Height="900" Width="400">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nút quay lại -->
        <Button
            Margin="23,17,0,143"
            HorizontalAlignment="Left"
            Foreground="White"
            FontSize="13"
            Background="Transparent"
            BorderThickness="0"
            Cursor="Hand"
            Click="Previous_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <TextBlock Text="← Previous"
                               Foreground="{TemplateBinding Foreground}" 
                               TextDecorations="None" />
                </ControlTemplate>
            </Button.Template>
        </Button>

        <StackPanel Grid.Row="0" Margin="0,46,0,20" Grid.RowSpan="2">

            <Border Style="{StaticResource CardStyle}" Height="517">
                <StackPanel>

                    <!-- Title -->
                    <TextBlock Text="Speaking With AI"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0 0 0 14"/>

                    <!-- Topic card -->
                    <Border Background="White"
                            CornerRadius="16"
                            Padding="12"
                            Margin="0 0 0 16" 
                            Height="124">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Speaking Topic"
                                       FontSize="20"
                                       FontWeight="SemiBold" 
                                       Margin="10,10,-10,59" 
                                       Grid.ColumnSpan="2"/>

                            <TextBox x:Name="TopicTextBox"
                                     FontSize="11"
                                     Foreground="Gray"
                                     TextWrapping="Wrap" 
                                     BorderThickness="0"
                                     Background="Transparent"
                                     IsReadOnly="True"
                                     Margin="10,51,-10,10" 
                                     Grid.ColumnSpan="2"
                                     Text="Click 'Generate' to get an AI-generated speaking topic"/>

                            <Button x:Name="GenerateButton"
                                    Content="✏ Generate"
                                    FontSize="11"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Background="#051033"
                                    Margin="179,0,0,66" 
                                    Click="GenerateTopic_Click" Height="34" VerticalAlignment="Bottom"/>
                        </Grid>
                    </Border>

                    <!-- Speaking recorder -->
                    <Border Background="Beige"
                            CornerRadius="16"
                            Padding="12" 
                            Height="297">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Tiêu đề + word count đổi thành status -->
                            <TextBlock Text="Your Speaking"
                                       FontWeight="SemiBold"/>

                            <TextBlock x:Name="RecordStatusTextBlock"
                                       Text="Tap record and start speaking"
                                       FontSize="11"
                                       Foreground="Gray"
                                       Margin="0,4,0,0"
                                       Grid.Row="1"/>

                            <StackPanel Grid.Row="2"
                                        Margin="0,20,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top">
                                <!-- Nút ghi âm -->
                                <Button x:Name="RecordButton"
                                        Width="120"
                                        Height="120"
                                        Click="RecordButton_Click"
                                        Cursor="Hand"
                                        BorderThickness="0"
                                        Background="White"
                                        Style="{StaticResource PrimaryButtonStyle}">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="🎙"
                                                   FontSize="32"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,2"/>
                                        <TextBlock x:Name="RecordButtonText"
                                                   Text="Record"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- Timer / info -->
                                <TextBlock x:Name="TimerTextBlock"
                                           Text="00:00"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="Black"
                                           Margin="0,12,0,0"
                                           HorizontalAlignment="Center"/>

                                <!-- Hiển thị file vừa ghi -->
                                <TextBlock x:Name="LastFileTextBlock"
                                           Text=""
                                           FontSize="11"
                                           Foreground="Gray"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           Margin="10,8,10,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                </StackPanel>
            </Border>

            <!-- Submit -->
            <Button x:Name="SubmitButton"
                    Content="SUBMIT"
                    Style="{StaticResource SubmitButtonStyle}"
                    Margin="0 16 0 0"
                    Height="50"
                    Click="Submit_Click"
                    IsEnabled="False"/>
        </StackPanel>

        <!-- Bottom Navigation -->
        <Grid Grid.Row="2" Background="#12103D" Height="64" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Home -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="20" Foreground="#F20231" HorizontalAlignment="Center"/>
                <TextBlock Text="Home" FontSize="12" Foreground="#F20231" Margin="0,6,0,0" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Profile -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="18" Foreground="#EFBF7F" HorizontalAlignment="Center" Opacity="0.85"/>
                <TextBlock Text="Profile" FontSize="12" Foreground="#EFBF7F" Margin="0,6,0,0" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Setting -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="20" Foreground="#EFBF7F" HorizontalAlignment="Center"/>
                <TextBlock Text="Setting" FontSize="12" Foreground="#EFBF7F" Margin="0,6,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

    </Grid>
</Page>

<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="WPFAPP.AiScoreSpeaking"
        Title="AiScoreSpeaking" Width="370" Height="760" WindowStartupLocation="CenterScreen" Background="#222">
    <Window.Resources>
        <!-- Rounded Button style (Button has no CornerRadius) -->
        <Style x:Key="RoundedButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#16A34A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="FontFamily" Value="Inter"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="24"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Outer frame -->
        <Border Margin="4,4,4,0" CornerRadius="12" BorderBrush="#CED4DA" BorderThickness="2" Background="#241F6B" Height="740" VerticalAlignment="Top">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="84" />
                </Grid.RowDefinitions>

                <!-- Content (scrollable) -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="496" VerticalAlignment="Top" HorizontalAlignment="Center" Width="358" Margin="0,78,0,0">
                    <StackPanel Margin="0,12" HorizontalAlignment="Center">
                        <!-- Main card -->

                    </StackPanel>
                </ScrollViewer>

                <!-- Bottom Navigation Bar -->
                <Grid Grid.Row="1" Background="#12103D" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE80F;" FontSize="24" Foreground="#F20231" HorizontalAlignment="Center"/>
                        <TextBlock Text="Home" FontFamily="Inter" FontSize="14" Foreground="#F20231" Margin="0,6,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE76D;" FontSize="22" Foreground="#EFBF7F" HorizontalAlignment="Center" Opacity="0.85"/>
                        <TextBlock Text="Profile" FontFamily="Inter" FontSize="14" Foreground="#EFBF7F" Margin="0,6,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="24" Foreground="#EFBF7F" HorizontalAlignment="Center"/>
                        <TextBlock Text="Setting" FontFamily="Inter" FontSize="14" Foreground="#EFBF7F" Margin="0,6,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
                <Button Content="Close"
                      
                                            Background="#16A34A" Foreground="White" FontWeight="SemiBold" FontSize="18" Style="{StaticResource RoundedButtonStyle}" Margin="68,598,68,0" Click="Button_Click_1" Height="44" VerticalAlignment="Top"/>
                <Border Background="#F8E4CC" CornerRadius="20" Padding="20" Margin="0,78,0,78" HorizontalAlignment="Center" Width="318">
                    <StackPanel Margin="-20,0,-20,-20">

             

                        <!-- Header: icon + title -->
                        <StackPanel Orientation="Horizontal" Margin="4,0,0,10" Width="283">
                            <Border Background="#12103D" CornerRadius="12" Width="44" Height="43" >
                                <Viewbox Width="28" Height="28">
                                    <Canvas Width="48" Height="48">
                                        <!-- supplied SVG converted to XAML (micro icon/logo) -->
                                        <Path Data="M32 0C40.8366 0 48 7.16344 48 16V32C48 40.8366 40.8366 48 32 48H16C7.16344 48 0 40.8366 0 32V16C0 7.16344 7.16344 0 16 0H32Z" Fill="#12103D" Height="38" Stretch="Fill" Width="40"/>
                                        <Path Data="M24 13.5C21.9297 13.5 20.25 15.1797 20.25 17.25V23.5C20.25 25.5703 21.9297 27.25 24 27.25C26.0703 27.25 27.75 25.5703 27.75 23.5V17.25C27.75 15.1797 26.0703 13.5 24 13.5ZM19 21.9375C19 21.418 18.582 21 18.0625 21C17.543 21 17.125 21.418 17.125 21.9375V23.5C17.125 26.9805 19.7109 29.8555 23.0625 30.3125V31.625H21.1875C20.668 31.625 20.25 32.043 20.25 32.5625C20.25 33.082 20.668 33.5 21.1875 33.5H24H26.8125C27.332 33.5 27.75 33.082 27.75 32.5625C27.75 32.043 27.332 31.625 26.8125 31.625H24.9375V30.3125C28.2891 29.8555 30.875 26.9805 30.875 23.5V21.9375C30.875 21.418 30.457 21 29.9375 21C29.418 21 29 21.418 29 21.9375V23.5C29 26.2617 26.7617 28.5 24 28.5C21.2383 28.5 19 26.2617 19 23.5V21.9375Z"
                                                      Fill="#EFBF7F" Height="40" Stretch="Fill" Width="30" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="9" Canvas.Top="4"/>
                                    </Canvas>
                                </Viewbox>
                            </Border>
                            <TextBlock
                   FontWeight="Bold"
                   FontSize="22"
                   Foreground="#241F6B" Height="32" Width="191"
                   Text=" Speaking With AI"
                   />

                        </StackPanel>
                        <Border Background="White" CornerRadius="12" BorderBrush="#241F6B" BorderThickness="1" Width="289">
                            <StackPanel Margin="12">
                                <TextBlock Text="AI Score: 8.5" FontWeight="Bold" FontSize="20" Foreground="#241F6B" Margin="0,0,0,6"/>
                                <TextBlock Text='Topic: Click "Generate" to get an AI-generated speaking topic'
                                                   FontSize="14" Foreground="#241F6B"
                                                   TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <!-- Feedback card (outer pale border + inner white text area) -->
                        <Border Background="#F8E4CC" CornerRadius="16" BorderBrush="#241F6B" BorderThickness="1" Margin="0,16,0,0" Padding="12" Height="297" Width="290">
                            <StackPanel Margin="0,0,0,-38">
                                <TextBlock Text="Your Feed Back Here" FontWeight="Bold" FontSize="18" Foreground="#241F6B" Margin="4,0,0,8"/>
                                <Border Background="White" CornerRadius="12" BorderThickness="0" Padding="8" Height="235">
                                    <Grid Margin="0,0,0,-56">
                                        <TextBlock Text="This is your feedback...."
                                                           Foreground="#ADAEBC"
                                                           FontSize="14"
                                                           Margin="12,12,12,12"
                                                           IsHitTestVisible="False"
                                                           VerticalAlignment="Top">
                                            <TextBlock.Style>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, ElementName=txtFeedback}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
<Window x:Class="WPFAPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PENGU" Height="760" Width="370"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgDarkBrushs}">
    <Grid Margin="0,0,0,-6">
        <StackPanel Grid.Row="0" Margin="0,328,0,371"
            HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.607">
            <TextBlock Text="PENGU"
               FontSize="26"
               FontWeight="Bold"
               Foreground="{StaticResource AccentYellowBrush}"
               HorizontalAlignment="Center"/>
            <TextBlock Text="Self Practice Deeply"
               FontSize="13"
               Foreground="Teal"
               HorizontalAlignment="Center"/>
        </StackPanel>
        <!-- Frame để host các Page -->
        <Frame x:Name="MainFrame"
               NavigationUIVisibility="Hidden" Margin="0,240,0,-240" Navigated="MainFrame_Navigated"
               />
    </Grid>
</Window>
